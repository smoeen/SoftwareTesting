<project>

    <target name="clean">
        <delete dir="build"/>
    </target>

    <target name="compile">
        <mkdir dir="build/classes"/>
        <javac srcdir="BMS" destdir="build/classes">
        <classpath>
            <pathelement path="lib/junit-4.10.jar"/>
        </classpath>
        </javac>
    </target>

    <target name="jar" depends="compile">
        <fileset id="lib.jars" dir="lib" includes="*.jar" />
        <mkdir dir="build/jar"/>
        <jar destfile="build/jar/ManagementSystem.jar" basedir="build/classes">
            <zipgroupfileset refid="lib.jars" />
            <manifest>
                <attribute name="TestRunner" value="BMS.TestRunner"/>
            </manifest>
        </jar>
    </target>

    <target name="run">
        <java jar="build/jar/ManagementSystem.jar" fork="false"/>
    </target>

</project>
